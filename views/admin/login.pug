doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Admin Login | E-Store
        link(rel='shortcut icon' type='image/x-icon' href='/images/favicon.png')
        link(rel='stylesheet' href='/bootstrap/css/bootstrap.min.css')
        link(href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900&display=swap' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800,900&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='/css/all.min.css')
        link(rel='stylesheet' href='/css/style.css')
        link(rel='stylesheet' href='/css/responsive.css')
        block styles
    body
        div.main_content
            .login_register_wrap.section
                .container
                    .row.justify-content-center
                        .col-xl-6.col-md-10
                            .login_wrap
                                .padding_eight_all.bg-white
                                    .heading_s1
                                        h3 Login
                                    form(method='post')
                                        .form-group.mb-3
                                            input(class=`form-control ${validUsernameClass || ''}` type='text', name='username', placeholder='Username', value=`${username || ''}`, required='')
                                            div.invalid-feedback= validUsernameMessage || ''
                                        .form-group.mb-3
                                            input(class=`form-control ${validPasswordClass || ''}` type='password', name='password', placeholder='Password', required='')
                                            div.invalid-feedback= validPasswordMessage || ''
                                        .login_footer.form-group.mb-3
                                            .chek-form
                                                .custome-checkbox
                                                    input.form-check-input(type='checkbox', name='checkbox', id='rememberme', value='')
                                                    label.form-check-label(for='rememberme')
                                                        span Remember me
                                        .form-group.mb-3
                                            button.btn.btn-fill-out.btn-block(type='submit', name='login') Log in
        script(src='/js/jquery-3.6.0.min.js')
        script(src='/bootstrap/js/bootstrap.min.js')
        script(src='/js/scripts.js')
        block scripts