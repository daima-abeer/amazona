extends layout.pug

block title
    title Login | E-Store

block content
    div.breadcrumb_section.bg_gray.page-title-mini
        div.container
            div.row.align-items-center
                div.col-md-6
                    div.page-title
                        h1 Login
    div.main_content
        .login_register_wrap.section
            .container
                .row.justify-content-center
                    .col-xl-6.col-md-10
                        .login_wrap
                            .padding_eight_all.bg-white
                                .heading_s1
                                    h3 Login
                                form(method='post')
                                    .form-group.mb-3
                                        input(class=`form-control ${validEmailClass || ''}` type='text', name='email', placeholder='Your Email', value=`${email || ''}`, required='')
                                        div.invalid-feedback= validEmailMessage || ''
                                    .form-group.mb-3
                                        input(class=`form-control ${validPasswordClass || ''}` type='password', name='password', placeholder='Password', required='')
                                        div.invalid-feedback= validPasswordMessage || ''
                                    .login_footer.form-group.mb-3
                                        .chek-form
                                            .custome-checkbox
                                                input.form-check-input(type='checkbox', name='checkbox', id='rememberme', value='')
                                                label.form-check-label(for='rememberme')
                                                    span Remember me
                                    .form-group.mb-3
                                        button.btn.btn-fill-out.btn-block(type='submit', name='login') Log in
                                .different_login
                                    span  or
                                .form-note.text-center Don't Have an Account?
                                    a(href='/register') Sign up now

