extends layout.pug

block title
    title Cart | E-Store

block content
    .breadcrumb_section.bg_gray.page-title-mini
        .container
            .row.align-items-center
                .col-md-6
                    .page-title
                        h1 Shopping Cart
    .main_content
        .section
            .container
                .row
                    .col-12
                        .table-responsive.shop_cart_table(style="overflow: hidden")
                            table.table
                                thead
                                    tr
                                        th.product-thumbnail &nbsp;
                                        th.product-name Product
                                        th.product-price Price
                                        th.product-quantity Quantity
                                        th.product-subtotal Total
                                        th.product-remove Remove
                                tbody
                                    tr
                                        td(colspan='6')
                                            .row
                                                .col-12
                                                    .text-center(style="padding-top: 3em;padding-bottom: 3em;")
                                                        h3 Your cart is currently empty.
                                                        p Return to shop
                                                        a.btn.btn-fill-out.btn-sm(href='/') Return to Shop